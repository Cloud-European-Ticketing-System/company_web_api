<div class="jumbotron">
  <h1 style="margin-left: 20px">Cloud European Ticketing System</h1>

  <br/><br/><br/>
  <style>
    .jumbotron {
      background: url('/assets/subway_background.jpeg') no-repeat top center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: 100%;
      height: 700px;
      color:white;
    }
  </style>


  <br/><br/><br/>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path ) do |f| %>

        <div class="input-group">
          <%= f.label :email, class: 'input-group-addon' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="input-group">
          <%= f.label :password, class: 'input-group-addon'%>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>