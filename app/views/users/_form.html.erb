<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <%= form.text_field :first_name, id: :user_first_name, placeholder: 'first name', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.text_field :last_name, id: :user_last_name, placeholder: 'last name', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.text_field :email, id: :user_email, placeholder: 'email', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.text_field :country, id: :user_country, placeholder: 'country', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.text_field :address, id: :user_address, placeholder: 'address', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.text_field :telephone, id: :user_telephone, placeholder: 'telephone', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.password_field :password, id: :user_password, placeholder: 'password', class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= form.hidden_field :role, id: :user_role, placeholder: 'role', class: 'form-control', value: 0 %>
  </div>

  <div class="input-group">
    <%= form.hidden_field :company_id, id: :user_company_id, placeholder: 'company', class: 'form-control',value: Company.first.id %>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit class: "btn btn-default" %>
    <%= link_to 'Back', users_path, class: "btn btn-default" %>
  </div>
<% end %>